<footer class="bg-gray-900 text-white py-16">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Store Info -->
      <div>
        <h3 class="text-lg font-bold mb-4">{{ shop.name }}</h3>
        {% if section.settings.footer_text != blank %}
          <p class="text-gray-400">{{ section.settings.footer_text }}</p>
        {% endif %}
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="text-lg font-bold mb-4">{{ section.settings.menu_title }}</h3>
        <ul class="space-y-2">
          {% for link in section.settings.footer_menu.links %}
            <li>
              <a href="{{ link.url }}" class="text-gray-400 hover:text-white transition-colors">
                {{ link.title }}
              </a>
            </li>
          {% endfor %}
        </ul>
      </div>

      <!-- Contact Info -->
      <div>
        <h3 class="text-lg font-bold mb-4">Contact Us</h3>
        {% if section.settings.contact_address != blank %}
          <p class="text-gray-400 mb-2">{{ section.settings.contact_address }}</p>
        {% endif %}
        {% if section.settings.contact_email != blank %}
          <p class="text-gray-400 mb-2">
            <a href="mailto:{{ section.settings.contact_email }}" class="hover:text-white transition-colors">
              {{ section.settings.contact_email }}
            </a>
          </p>
        {% endif %}
        {% if section.settings.contact_phone != blank %}
          <p class="text-gray-400">
            <a href="tel:{{ section.settings.contact_phone }}" class="hover:text-white transition-colors">
              {{ section.settings.contact_phone }}
            </a>
          </p>
        {% endif %}
      </div>

      <!-- Newsletter -->
      <div>
        <h3 class="text-lg font-bold mb-4">Newsletter</h3>
        {% form 'customer' %}
          <div class="flex">
            <input type="email" name="contact[email]" class="flex-1 px-4 py-2 rounded-l-lg text-gray-900" placeholder="Your email">
            <button type="submit" class="bg-primary px-6 py-2 rounded-r-lg hover:bg-opacity-90 transition-colors">
              Subscribe
            </button>
          </div>
        {% endform %}
      </div>
    </div>

    <!-- Copyright -->
    <div class="border-t border-gray-800 mt-12 pt-8 text-center text-gray-400">
      <p>&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.</p>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "text",
      "id": "footer_text",
      "label": "Footer Text",
      "default": "Your one-stop shop for all your needs"
    },
    {
      "type": "text",
      "id": "menu_title",
      "label": "Menu Title",
      "default": "Quick Links"
    },
    {
      "type": "link_list",
      "id": "footer_menu",
      "label": "Footer Menu",
      "default": "footer"
    },
    {
      "type": "text",
      "id": "contact_address",
      "label": "Address"
    },
    {
      "type": "text",
      "id": "contact_email",
      "label": "Email"
    },
    {
      "type": "text",
      "id": "contact_phone",
      "label": "Phone"
    }
  ]
}
{% endschema %} 