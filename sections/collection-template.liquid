<div class="py-12">
  <div class="container mx-auto px-4">
    <header class="mb-12">
      <h1 class="text-4xl font-bold mb-4">{{ collection.title }}</h1>
      {% if collection.description != blank %}
        <div class="prose max-w-3xl">
          {{ collection.description }}
        </div>
      {% endif %}
    </header>

    <div class="flex flex-col lg:flex-row gap-8">
      <!-- Filters -->
      <div class="lg:w-64">
        <div class="sticky top-4">
          <h2 class="text-lg font-bold mb-4">Filters</h2>
          
          {% for filter in collection.filters %}
            <div class="mb-6">
              <h3 class="font-medium mb-2">{{ filter.label }}</h3>
              
              <div class="space-y-2">
                {% case filter.type %}
                  {% when 'boolean' or 'list' %}
                    {% for value in filter.values %}
                      <label class="flex items-center">
                        <input
                          type="checkbox"
                          name="{{ value.param_name }}"
                          value="{{ value.value }}"
                          {% if value.active %}checked{% endif %}
                          class="mr-2"
                        >
                        {{ value.label }} ({{ value.count }})
                      </label>
                    {% endfor %}
                  
                  {% when 'price_range' %}
                    <div class="flex gap-2">
                      <input
                        type="number"
                        name="{{ filter.min_value.param_name }}"
                        value="{{ filter.min_value.value }}"
                        placeholder="Min"
                        class="w-full border border-gray-300 rounded px-2 py-1"
                      >
                      <input
                        type="number"
                        name="{{ filter.max_value.param_name }}"
                        value="{{ filter.max_value.value }}"
                        placeholder="Max"
                        class="w-full border border-gray-300 rounded px-2 py-1"
                      >
                    </div>
                {% endcase %}
              </div>
            </div>
          {% endfor %}
        </div>
      </div>

      <!-- Products -->
      <div class="flex-1">
        {% if collection.products.size > 0 %}
          <!-- Sort -->
          <div class="flex justify-end mb-8">
            <select class="border border-gray-300 rounded-lg px-4 py-2">
              {% for sort_option in collection.sort_options %}
                <option 
                  value="{{ sort_option.value }}"
                  {% if sort_option.value == collection.sort_by %}selected{% endif %}
                >
                  {{ sort_option.name }}
                </option>
              {% endfor %}
            </select>
          </div>

          <!-- Product Grid -->
          <div class="grid grid-cols-1 md:grid-cols-3 lg:grid-cols-4 gap-8">
            {% for product in collection.products %}
              {% render 'product-card', product: product %}
            {% endfor %}
          </div>

          <!-- Pagination -->
          {% if paginate.pages > 1 %}
            <div class="mt-12 flex justify-center gap-2">
              {% if paginate.previous %}
                <a href="{{ paginate.previous.url }}" class="px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50">
                  Previous
                </a>
              {% endif %}

              {% for part in paginate.parts %}
                {% if part.is_link %}
                  <a href="{{ part.url }}" class="px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50">
                    {{ part.title }}
                  </a>
                {% else %}
                  <span class="px-4 py-2 border border-primary bg-primary text-white rounded-lg">
                    {{ part.title }}
                  </span>
                {% endif %}
              {% endfor %}

              {% if paginate.next %}
                <a href="{{ paginate.next.url }}" class="px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50">
                  Next
                </a>
              {% endif %}
            </div>
          {% endif %}
        {% else %}
          <div class="text-center py-12">
            <p class="text-lg text-gray-600">No products found in this collection.</p>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Collection",
  "settings": []
}
{% endschema %} 