<div class="bg-gray-50 py-16">
  <div class="container mx-auto px-4">
    <div class="max-w-3xl mx-auto text-center">
      <h2 class="text-3xl font-bold mb-6">{{ section.settings.title }}</h2>
      <div class="prose max-w-none">
        {{ section.settings.content }}
      </div>
      
      {% if section.settings.button_link != blank %}
        <a href="{{ section.settings.button_link }}" class="inline-block bg-primary text-white px-8 py-3 rounded-lg hover:bg-opacity-90 transition-colors mt-8">
          {{ section.settings.button_text }}
        </a>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "About",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "About Us"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content",
      "default": "<p>Share your brand story and mission with your customers.</p>"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Learn More"
    }
  ],
  "presets": [
    {
      "name": "About"
    }
  ]
}
{% endschema %} 