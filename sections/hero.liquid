<div class="relative bg-gray-900 text-white">
  {% if section.settings.image != blank %}
    <img src="{{ section.settings.image | img_url: '2000x' }}" alt="{{ section.settings.heading }}" class="w-full h-[600px] object-cover opacity-70">
  {% endif %}
  
  <div class="absolute inset-0 flex items-center">
    <div class="container mx-auto px-4">
      <div class="max-w-2xl">
        <h1 class="text-5xl font-bold mb-4">{{ section.settings.heading }}</h1>
        <p class="text-xl mb-8">{{ section.settings.subtext }}</p>
        {% if section.settings.button_link != blank %}
          <a href="{{ section.settings.button_link }}" class="inline-block bg-primary text-white px-8 py-3 rounded-lg hover:bg-opacity-90 transition-colors">
            {{ section.settings.button_text }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Welcome to Our Store"
    },
    {
      "type": "text",
      "id": "subtext",
      "label": "Subtext",
      "default": "Find the perfect products for your needs"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Shop Now"
    }
  ],
  "presets": [
    {
      "name": "Hero"
    }
  ]
}
{% endschema %} 