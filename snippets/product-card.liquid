<div class="group relative">
  <div class="w-full aspect-w-1 aspect-h-1 bg-gray-200 rounded-lg overflow-hidden">
    {%- if product.featured_media -%}
      <img src="{{ product.featured_media | img_url: 'medium' }}"
           alt="{{ product.featured_media.alt | escape }}"
           class="w-full h-full object-center object-cover group-hover:opacity-75"
           loading="lazy"
           width="{{ product.featured_media.width }}"
           height="{{ product.featured_media.height }}">
    {%- else -%}
      {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-center object-cover' }}
    {%- endif -%}
  </div>

  <div class="mt-4 flex justify-between">
    <div>
      <h3 class="text-sm text-gray-700">
        <a href="{{ product.url }}">
          <span aria-hidden="true" class="absolute inset-0"></span>
          {{ product.title }}
        </a>
      </h3>
      <p class="mt-1 text-sm text-gray-500">
        {%- if product.available -%}
          {%- if product.variants.size > 1 -%}
            From {{ product.price_min | money }}
          {%- else -%}
            {{ product.price | money }}
          {%- endif -%}
        {%- else -%}
          Sold out
        {%- endif -%}
      </p>
    </div>
    {%- if product.compare_at_price > product.price -%}
      <p class="text-sm font-medium text-gray-900">
        <span class="sr-only">Regular price</span>
        <span class="line-through text-gray-500">{{ product.compare_at_price | money }}</span>
        <span class="text-red-600 ml-1">{{ product.price | money }}</span>
      </p>
    {%- endif -%}
  </div>
</div> 